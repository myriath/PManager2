<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/usernameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/showPasswordButton"
        android:textSize="16sp" />

    <TextView
        android:layout_marginBottom="16dp"
        android:id="@+id/passwordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="@string/placeholder"
        android:layout_marginHorizontal="16dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/showPasswordButton"
        android:layout_below="@id/usernameView"
        tools:ignore="TextViewEdits" />

    <ImageView
        android:id="@+id/copyButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/usernameView"
        android:layout_alignBottom="@+id/passwordView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:src="@drawable/copy"
        android:contentDescription="@string/copy" />

    <ImageView
        android:id="@+id/showPasswordButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/usernameView"
        android:layout_alignBottom="@+id/passwordView"
        android:layout_toStartOf="@id/copyButton"
        android:padding="10dp"
        android:src="@drawable/eye"
        android:contentDescription="@string/show_password" />

</RelativeLayout>